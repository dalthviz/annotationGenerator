                        <id>sonar-report</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>sonar</goal>
                            
                        </goals>
                        <configuration>
                            <tasks>
                                <echo>sonar-report</echo>                            
                            </tasks>
                        </configuration>
